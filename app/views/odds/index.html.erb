			  </div>
			  <div class="field">
			    <%= f.hidden_field :line, :value => @home_line %>
			  </div>
			  <div class="actions">
			    <%= f.submit "Enter Pick", :class => 'pickbutton'%>
			  </div>
			<% end %>
